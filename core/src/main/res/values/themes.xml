<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal del módulo Xhat -->
    <style name="Theme.Xhat" parent="Theme.MaterialComponents.DayNight">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/primaryLightColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Fondo y texto -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/black</item>

        <!-- Personalización de botones -->
        <item name="android:buttonTint">@color/primaryColor</item>
    </style>

    <!-- Tema oscuro -->
    <style name="Theme.Xhat.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores principales para modo oscuro -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/primaryLightColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Fondo y texto para modo oscuro -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
