<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 🌟 Tema principal de la aplicación -->
    <style name="Theme.Xhat" parent="Theme.Material3.DayNight">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryContainer">@color/orange_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/gray</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Fondo y texto -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Barra de estado y navegación -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryContainer</item>
        <item name="android:buttonTint">@color/orange_primary</item>

        <!-- Tipografía global -->
        <item name="android:fontFamily">@font/dm_sans</item>
    </style>

    <!-- 🌑 Tema Oscuro -->
    <style name="Theme.Xhat.Dark" parent="Theme.Material3.DayNight">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryContainer">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryContainer">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Fondo y texto -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Barra de estado y navegación -->
        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!-- Tipografía global -->
        <item name="android:fontFamily">@font/dm_sans</item>
    </style>

    <!-- 🌐 Tema sin ActionBar -->
    <style name="Theme.Xhat.NoActionBar" parent="Theme.Xhat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Tema para autenticación -->
    <style name="Theme.Xhat.AuthTheme" parent="Theme.Xhat">
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>
