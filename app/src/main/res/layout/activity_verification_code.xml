<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Espacio para el logo -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_xhat"
        android:contentDescription="@string/app_logo"
        android:layout_marginBottom="20dp" />

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="@string/enter_verification_code"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Campo de código de verificación -->
    <EditText
        android:id="@+id/etVerificationCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@android:drawable/edit_text"
        android:hint="@string/verification_code"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <!-- Botón para verificar código -->
    <Button
        android:id="@+id/btnVerifyCode"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:backgroundTint="@color/orange"
        android:text="@string/verify_code"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <!-- Botón para recuperar cuenta con correo -->
    <TextView
        android:id="@+id/tvRecoverWithEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/recover_with_email"
        android:textColor="@color/orange"
        android:textStyle="italic"
        android:clickable="true"
        android:focusable="true" />

    <!-- Footer con mensaje adicional -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="@string/verification_help"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center" />
</LinearLayout>
