<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemCommunityLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Nombre de la Comunidad -->
    <TextView
        android:id="@+id/tvCommunityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la Comunidad"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- Descripción de la Comunidad -->
    <TextView
        android:id="@+id/tvCommunityDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción de la Comunidad"
        android:textSize="14sp"
        android:textColor="@color/dark_gray"
        android:layout_marginTop="4dp" />

    <!-- Número de Miembros -->
    <TextView
        android:id="@+id/tvMemberCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 miembros"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_marginTop="4dp" />

    <!-- Botón de Suscripción -->
    <Button
        android:id="@+id/btnSubscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suscribirse"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white" />

    <!-- Botón de Configuración (Nuevo) -->
    <Button
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuración"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white" />

</LinearLayout>
