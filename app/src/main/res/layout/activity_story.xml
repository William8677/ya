<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Historias Destacadas -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHighlightedStories"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:padding="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                <!-- Separador -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"/>

                <!-- Lista Principal de Historias -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvStories"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:padding="8dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Panel de EdiciÃ³n -->
    <FrameLayout
        android:id="@+id/editorContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- Vista previa de media -->
        <ImageView
            android:id="@+id/mediaPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <!-- Barra de herramientas superior -->
        <LinearLayout
            android:id="@+id/topToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#80000000"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="#FFFFFF" />

            <android.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_send"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Barra de herramientas inferior -->
        <LinearLayout
            android:id="@+id/bottomToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#80000000"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnText"
                style="@style/StoryEditorButton"
                android:src="@android:drawable/ic_menu_edit"/>

            <ImageButton
                android:id="@+id/btnSticker"
                style="@style/StoryEditorButton"
                android:src="@android:drawable/ic_menu_gallery"/>

            <ImageButton
                android:id="@+id/btnFilter"
                style="@style/StoryEditorButton"
                android:src="@android:drawable/ic_menu_manage"/>

            <ImageButton
                android:id="@+id/btnMusic"
                style="@style/StoryEditorButton"
                android:src="@android:drawable/ic_media_play"/>

            <ImageButton
                android:id="@+id/btnDraw"
                style="@style/StoryEditorButton"
                android:src="@android:drawable/ic_menu_edit"/>
        </LinearLayout>
    </FrameLayout>

    <!-- FAB para agregar nueva historia -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        app:fabSize="normal"/>

    <!-- BottomSheet para opciones -->
    <include layout="@layout/bottom_sheet_story_options"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
